<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.best.demo.staff.dao.DepartmentDao">
	<resultMap type="Department" id="departmentMap">
		<id column="id" property="id"/>
		<result column="code" property="code"/>
		<result column="name" property="name"/>
	</resultMap>
	
<!-- 	<RESULTMAP TYPE="ARTICLE" ID="ARTICLELIST"> -->
<!-- 		<COLLECTION PROPERTY="ARTICLES" COLUMN="UID" OFTYPE="ARTICLE" SELECT="GETARTICLEBYUSER"></COLLECTION> -->
<!-- 	</RESULTMAP> -->
	
	<select id="getDepartment" parameterType="long" resultType="Department">
		select * from Department where id = #{id}
	</select>
	<insert id="save" parameterType="Department">
		insert into department (id, code, name)
		values (#{id}, #{code}, #{name})
		<selectKey keyProperty="id" resultType="long" order="AFTER">
			SELECT LAST_INSERT_ID();
		</selectKey>
	</insert>
	<delete id="deleteAll">
		delete from department
	</delete>
</mapper>