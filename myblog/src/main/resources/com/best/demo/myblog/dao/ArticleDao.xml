<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.best.demo.myblog.dao.ArticleDao">
	<resultMap type="Article" id="articleMap">
		<id javaType="long" column="id" property="id"/>
		<result javaType="string" column="title" property="title"/>
		<result javaType="string" column="content" property="content"/>
		<result javaType="java.util.Date" column="create_date" property="createDate"/>
		<result javaType="java.util.Date" column="update_date" property="updateDate"/>
	</resultMap>
	
<!-- 	<RESULTMAP TYPE="ARTICLE" ID="ARTICLELIST"> -->
<!-- 		<COLLECTION PROPERTY="ARTICLES" COLUMN="UID" OFTYPE="ARTICLE" SELECT="GETARTICLEBYUSER"></COLLECTION> -->
<!-- 	</RESULTMAP> -->
	
	<select id="getArticle" parameterType="long" resultType="Article">
		select * from Article where id = #{id}
	</select>
	<select id="getArticleByUser" parameterType="long" resultType="Article">
		select * from Article where uid = #{uid}
	</select>
	<insert id="save" parameterType="Article">
		insert into article (id, uid, title, content, create_date,
		update_date)
		values (#{id}, #{uid}, #{title}, #{content}, #{createDate}, #{updateDate})
		<selectKey keyProperty="id" resultType="long" order="AFTER">
			SELECT LAST_INSERT_ID();
		</selectKey>
	</insert>
	<delete id="deleteAll">
		delete from article
	</delete>
</mapper>